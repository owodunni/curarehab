{
    "name": "@curarehab/web",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "dev": "vite dev --host",
        "build": "run-s check assemble",
        "assemble": "vite build",
        "preview": "vite preview --host",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "test": "run-s test:unit test:system",
        "test:unit": "vitest run",
        "test:system": "playwright test",
        "test:lighthouse": "lhci autorun --config ./lighthouserc.ssr.json",
        "lint": "prettier --plugin-search-dir . --check . && eslint .",
        "format": "prettier --plugin-search-dir . --write .",
        "gql:update": "npx houdini@latest pull-schema"
    },
    "devDependencies": {
        "@lhci/cli": "^0.12.0",
        "@lighthouse-test/badge-generator": "^1.0.2",
        "@playwright/test": "^1.28.1",
        "@rgossiaux/svelte-heroicons": "^0.1.2",
        "@skeletonlabs/skeleton": "^1.5.1",
        "@sveltejs/adapter-auto": "^2.0.0",
        "@sveltejs/adapter-cloudflare": "^2.2.0",
        "@sveltejs/kit": "^1.5.0",
        "@tailwindcss/forms": "^0.5.3",
        "@tailwindcss/typography": "^0.5.9",
        "@types/marked": "^4.0.8",
        "@typescript-eslint/eslint-plugin": "^5.45.0",
        "@typescript-eslint/parser": "^5.45.0",
        "autoprefixer": "^10.4.13",
        "eslint": "^8.28.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-svelte": "^2.26.0",
        "postcss": "^8.4.21",
        "prettier": "^2.8.0",
        "prettier-plugin-svelte": "^2.8.1",
        "svelte": "^3.54.0",
        "svelte-check": "^3.0.1",
        "tailwindcss": "^3.2.7",
        "tslib": "^2.4.1",
        "typescript": "^5.0.0",
        "vite": "^4.3.0",
        "vitest": "^0.25.3",
        "houdini": "^1.2.5",
        "houdini-svelte": "^1.2.5"
    },
    "type": "module",
    "dependencies": {
        "@curarehab/api": "file:../api",
        "@sentry/svelte": "^7.46.0",
        "@sentry/tracing": "^7.46.0",
        "@supabase/auth-helpers-sveltekit": "^0.9.0",
        "marked": "^4.3.0",
        "toucan-js": "^3.1.0"
    }
}
