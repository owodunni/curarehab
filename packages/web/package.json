{
  "name": "@curarehab/web",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "vite dev --host",
    "build": "run-s assemble check ",
    "assemble": "vite build -l info",
    "preview": "vite preview --host",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "run-s test:unit test:system",
    "test:unit": "vitest run",
    "test:system": "playwright test",
    "test:lighthouse": "lhci autorun --config ./lighthouserc.ssr.json",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "format": "prettier --plugin-search-dir . --write ."
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^4.0.0",
    "@graphql-codegen/client-preset": "^4.0.0",
    "@graphql-codegen/near-operation-file-preset": "^2.5.0",
    "@graphql-codegen/typescript": "^4.0.0",
    "@graphql-codegen/typescript-operations": "^4.0.0",
    "@lhci/cli": "^0.12.0",
    "@lighthouse-test/badge-generator": "^1.0.2",
    "@playwright/test": "^1.34.3",
    "@rgossiaux/svelte-heroicons": "^0.1.2",
    "@skeletonlabs/skeleton": "^1.5.1",
    "@sveltejs/adapter-auto": "^2.0.0",
    "@sveltejs/adapter-cloudflare": "^2.2.0",
    "@sveltejs/kit": "^1.5.0",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.9",
    "@types/marked": "^4.0.8",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte": "^2.26.0",
    "graphql": "^16.6.0",
    "postcss": "^8.4.23",
    "prettier": "^2.8.0",
    "prettier-plugin-svelte": "^2.8.1",
    "svelte": "^3.54.0",
    "svelte-check": "^3.0.1",
    "svelte-intersection-observer": "^0.10.0",
    "tailwindcss": "^3.3.1",
    "tslib": "^2.4.1",
    "typescript": "^5.0.4",
    "vite": "^4.3.0",
    "vite-plugin-graphql-codegen": "^3.2.2",
    "vitest": "^0.25.3"
  },
  "type": "module",
  "dependencies": {
    "@sentry/svelte": "^7.46.0",
    "@sentry/tracing": "^7.46.0",
    "@urql/core": "^4.0.8",
    "marked": "^4.3.0",
    "toucan-js": "^3.1.0"
  }
}
